<Window x:Class="SetPriority.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SetPriority"
        mc:Ignorable="d"
        Title="Runtime System" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="439*"/>
            <ColumnDefinition Width="47*"/>
            <ColumnDefinition Width="169*"/>
            <ColumnDefinition Width="145*"/>
        </Grid.ColumnDefinitions>
        <Button x:Name="HighPriority_Btn" Content="High Priority" HorizontalAlignment="Left" Margin="53,106,0,0" VerticalAlignment="Top" Height="179" Width="312" Background="#FFFA1818" Click="HighPriority_Btn_Click" FontSize="36" Foreground="White"/>
        <Button x:Name="LowPriority_Btn" Content="Low Priority" HorizontalAlignment="Left" Margin="14,106,0,0" VerticalAlignment="Top" Height="179" Width="312" Background="#FFC33DF1" Click="LowPriority_Btn_Click" FontSize="36" Foreground="White" Grid.ColumnSpan="3" Grid.Column="1"/>

    </Grid>
</Window>
